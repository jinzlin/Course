<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/vpMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ctMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctMain"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tl_iconHeight="28dp"
        app:tl_iconWidth="28dp"
        app:tl_iconVisible="true"
        app:tl_underline_color = "#dbdbdb"
        app:tl_underline_height = "1dp"
        app:tl_underline_gravity = "TOP"
        app:tl_indicator_color="?attr/colorPrimary"
        app:tl_indicator_corner_radius="1.5dp"
        app:tl_indicator_height="3dp"
        app:tl_indicator_style="TRIANGLE"
        app:tl_indicator_width="10dp"
        app:tl_textSelectColor="?attr/textSelectColor"
        app:tl_textUnselectColor="?attr/textUnSelectColor"
        app:tl_textsize="12sp" />

</android.support.constraint.ConstraintLayout>